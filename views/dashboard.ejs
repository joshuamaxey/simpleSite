<!DOCTYPE html>
<html lang="en">
    <%- include('includes/head') %>
<body>
    <%- include('includes/header') %>

    <main>
        <h2>Dashboard</h2>

        <ul>
            <% posts.forEach(post => { %>
                <li><a href="/posts/<%= post.id %>"><%= post.title %></a> on <%= new Date(post.createdDate).getMonth() + 1 %>/<%= new Date(post.createdDate).getDate() %>/<%= new Date(post.createdDate).getFullYear() %></li>
            <% }) %>
        </ul>
    </main>

    <%- include('includes/footer') %>
</body>
</html>
